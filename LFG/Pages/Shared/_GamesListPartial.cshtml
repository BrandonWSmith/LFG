<h1>Games</h1>
<div class="group-games">
  @if (Model.GroupGames.Count == 0)
  {
    <div class="game-card">
      <h3 class="no-games">No Games Yet</h3>
    </div>
  }
  @foreach (var game in Model.GroupGames)
  {
    <a asp-page="/Group/GameGroups" asp-route-game="@game.Name">
      <div class="game-card">
        <partial name="_DefaultGameCoverPartial" />
        <h3 class="game-name">@game.Name</h3>
      </div>
    </a>
  }
</div>